@model Arackiralama.Models.VehicleOrders
@{
    ViewBag.Title = "Sipariş Detayı";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@{
    var Extras = Model.VehicleExtraFee.Split('~');
    string currencyValue = "TRY";
    if (Model.CurrencyID == 2)
    {
        currencyValue = "USD";
    }
    else if (Model.CurrencyID == 3)
    {
        currencyValue = "EUR";
    }

}
<div class="col">
    <div class="row">
        <div class="card">
            <div class="card-header">
                <h2 class="card-title">
                    @Html.Raw(Arackiralama.Resources.LanguageFields.OrderHistoryDetailTitle)
                </h2>
            </div>
            <div class="card-body">

                <div class="mb-3">
                    <div class="row">

                        <div class="col-12 col-md-12">
                            <a href="~/Member/OrderHistory" id="@Model.ID" class="btn btn-save float-right mt-2">@Html.Raw(Arackiralama.Resources.LanguageFields.ReturnToOrderList)</a>
                        </div>
                    </div>


                </div>

                <hr />
