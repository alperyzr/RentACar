@model IEnumerable<Arackiralama.Models.VehicleOrders>
@{
    ViewBag.Title = "OrderHistory";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@if (Model != null)
{

    <div class="faq-box">
        <center class="mt-2 mb-2">
            <h1 class="info-box-h1">
                @Html.Raw(Arackiralama.Resources.LanguageFields.ProfileOrderHistoryButton)
            </h1>
        </center>
        @foreach (var item in Model.OrderByDescending(m=>m.ID).Take(10))
        {
            <div class="row mt-3">
                <div class="col-12 col-lg-2">
                    <div class="ml-2">
                        <center>
                            <img src="@item.ThumImage" style="width:135px; height:76px; margin-bottom:2%;" />
                        </center>


                    </div>

                </div>
                <div class="col-12 col-lg-10">
                    <div class="row">
                        <div class="col-2">
                            <div class="col-12">
                                <strong>
                                    @Html.Raw(Arackiralama.Resources.LanguageFields.CarModel)
                                </strong>
                            </div>
                            <div class="col-12">
                                <strong>@item.VehicleName</strong>
                            </div>
                        </div>

                        <div class="col-3">
                            <div class="col-12">
                                <strong>
                                    @Html.Raw(Arackiralama.Resources.LanguageFields.CarReceiveDate)
                                </strong>
                            </div>
                            <div class="col-12">
                                <span>@item.StartAt @item.StartTime</span>
                            </div>
                            <div class="col-12">
                                <span>@item.StartOfficeName</span>
                            </div>
                            <div class="col-12">
                                <span>@item.OfficeAddress</span>
                            </div>
                        </div>
                        <div class="col-3">
                            <div class="col-12">
                                <strong>
                                    @Html.Raw(Arackiralama.Resources.LanguageFields.CarDeliverDate)
                                </strong>
                            </div>
                            <div class="col-12">
                                <span>@item.EndAt @item.EndTime</span>
                            </div>
                            <div class="col-12">
                                <span>@item.EndOfficeName</span>
                            </div>
                            <div class="col-12">
                                <span>@item.EndOfficeAddress</span>
                            </div>
                        </div>
                        <div class="col-2">
                            <div class="col-12">
                                <strong>@Html.Raw(Arackiralama.Resources.LanguageFields.AmountPaid)</strong>
                            </div>
                            <div class="col-12">
                                <span>
                                    @item.Orders.Total
                                </span>
                            </div>

                        </div>
                        <div class="col-2">
                            <div class="col-12">
                                @*<form action="~//OrderHistoryDetail" id="myForm">*@
                                @*<input type="hidden" value="@item.ID" name="ID" />*@
                                <a href="@Url.Action("OrderHistoryDetail", "Member", new { ID = item.ID })" id="@item.ID" class="btn btn-save submit">@Html.Raw(Arackiralama.Resources.LanguageFields.Detail)</a>
                                @*</form>*@



                            </div>
                        </div>
                        @*<div class="col-2">
                                <div class="col-12 mb-3">
                                    <a href="#">
                                        <i class="fas fa-redo mr-1"></i>
                                        <span> @Html.Raw(Arackiralama.Resources.LanguageFields.RepeatButtonText)</span>
                                    </a>
                                </div>
                                <div class="col-12 mb-3">
                                    <a href="#">
                                        <i class="fas fa-trash-alt mr-1"></i>
                                        <span>@Html.Raw(Arackiralama.Resources.LanguageFields.DeleteButtonText)</span>
                                    </a>
                                </div>
                            </div>*@
                    </div>
                </div>

            </div>
            <div class="row">
                <div class="col-12">
                    <center>
                        <hr />
                    </center>

                </div>
            </div>
        }

    </div>


}
else
{
    <div class="container mb-3">
        <div class="row">
            <div class="col-12">
                <div class="faq-box">
                    <center class="mt-2 mb-2">
                        <h1 class="info-box-h1">
                            @Html.Raw(Arackiralama.Resources.LanguageFields.ProfileOrderHistoryButton)
                        </h1>
                    </center>
                    <center class="mt-3 mb-3">
                        <strong>@Html.Raw(Arackiralama.Resources.LanguageFields.EmptyOrderHistory)</strong>
                    </center>
                </div>
            </div>
        </div>
    </div>
}

<script>
    $(document).ready(function () {
        $("a.submit").click(function () {
            document.getElementById("myForm").submit();
        });
    });
</script>



