@model IEnumerable<Arackiralama.Models.ContactInfoTranslation>
@{
    ViewBag.Title = "Contact";
    Layout = "~/Views/Shared/_Layout.cshtml";
  
}
<head>
    <style type="text/css">
        #map {
            height: 100%;
            height:400px;
        }

        /* Optional: Makes the sample page fill the window. */
       
    </style>
    <script src="https://polyfill.io/v3/polyfill.min.js?features=default"></script>
    <script src="https://maps.googleapis.com/maps/api/js?key=YOUR_API_KEY&callback=initMap&libraries=&v=weekly"
            defer></script>
    <script src="./app.js"></script>
</head>
<div class="container-fluid">
    <div class="row">


        <div class="faq-box" style="width:100%;">
            <div class="col-12 mb-3 mt-3">
                <h1 class="info-box-h1">
                    @Html.Raw(Arackiralama.Resources.LanguageFields.ContactInfo)
                </h1>
            </div>
            <div class="col-12 mb-3">
                <div class="row">
                    <div class="col-12 col-lg-6">
                        <div class="row">
                            @foreach (var item in Model)
                            {
                                <div class="col-12 mb-3">
                                    <span>

                                        <strong>
                                            @item.Title
                                        </strong>
                                        <span>
                                            @item.Explanation
                                        </span>

                                    </span>
                                </div>
                            }


                        </div>
                    </div>
                    <div class="col-12 col-lg-6">
                        <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3008.0110858137764!2d28.996989342537443!3d41.068750323651344!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x14cab6f89ef85503%3A0x3bb46a67cc6e3324!2zTWVjaWRpeWVrw7Z5LCBNZXZsw7x0IMOHdsWfLiBTb2thxJ_EsSBObzo0LCAzNDM4NyDFnmnFn2xpL8Swc3RhbmJ1bA!5e0!3m2!1str!2str!4v1597135096689!5m2!1str!2str" frameborder="0" style="border:0; width:100%; height:100%;" allowfullscreen="" aria-hidden="false" tabindex="0"></iframe>

                    </div>
                </div>
            </div>

        </div>
    </div>
</div>
<script src="https://maps.googleapis.com/maps/api/js?key=AIzaSyCKniT0uNGbdRlxoS6DtWNqE1LaRsgg_LQ"></script>
<script>
    var map;
    function initMap() {
        map = new google.maps.Map(document.getElementById("map"), {
            center: { lat: -34.397, lng: 150.644 },
            zoom: 8
        });
    }
</script>
