@model Arackiralama.ViewModels.Content.BlogViewModel
@{
    ViewBag.Title = "Blog Detail";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


    <div class="row">
        <div class="col-12 col-md-8">
            <div class="card">
                <div class="card-body">
                    <div class="col-12 mt-3">
                        <h1 class="info-box-h1">
                            @Model.Title
                        </h1>
                    </div>
                    <div class="col-12 mt-3">
                        <span>@Model.Date</span>
                    </div>
                    <div class="col-12 mt-3">
                        <img src="@Model.ImageURLPath" style="width:100%;" />
                    </div>
                    <div class="col-12 mt-3">
                        @Html.Raw(Model.DescriptionCK)

                    </div>


                </div>
            </div>
        </div>
        <div class="col-12 col-md-4">
            <div class="row">
                <div class="col-12">
                    @foreach (var item in Model.blogList.OrderByDescending(m => m.ID).Take(4))
                    {
                        <div class="card mb-3">
                            <div class="card-body card-body-edited card-body-content-padding-absorbe">
                                <div class="col-12 card-body-padding-absorbe">
                                    <div class="blog-opacity-div">
                                        <strong>
                                            @item.ImageTitle
                                        </strong>

                                    </div>
                                    <img src="@item.ImageURL" style="width:100%; height:200px;" />

                                </div>
                                <div class="col-12 mt-3">
                                    <h1 class="info-box-h1">
                                        @item.Title
                                    </h1>
                                </div>
                                <div class="col-12 mt-3">
                                    <span>
                                        @item.ShowCaseDescription
                                    </span>

                                </div>
                                <div class="col-12 mt-3 mb-3">

                                    <span class="float-right">

                                        @Html.HiddenFor(m => item.ID)

                                        @*@Html.ActionLink("Devamını Oku", "BlogDetail", "Content", new { ID=item.ID})*@
                                        <a href="/Content/BlogDetail/@item.ID">Devamını Oku</a>

                                    </span>

                                </div>

                            </div>
                        </div>
                        

                    }
                </div>

            </div>
        </div>
    </div>


