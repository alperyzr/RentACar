@model Arackiralama.Models.VehicleSearchModel


<div class="col-lg-12 mb-3">
        @foreach (var item in Model.VehicleList)
        {
            <div style="border:1px solid #b7b7b7;" class="mb-3">
                <div class="col-12 p-2">

                    <div class="row">
                        <div class="col-12">

                            <span><strong>@item.Name</strong></span>
                        </div>
                        <div class="col-12">
                            <span>
                                @if (item.CategoryID == 1)
                                {
                                    @("Mini");
                                }
                                else if (item.CategoryID == 3)
                                {
                                    @("Economy");
                                }
                                else if (item.CategoryID == 4)
                                {
                                    @("Compact");
                                }
                                else if (item.CategoryID == 6)
                                {
                                    @("Intermediate");
                                }
                                else if (item.CategoryID == 7)
                                {
                                    @("Standard");
                                }
                                else if (item.CategoryID == 8)
                                {
                                    @("Fullsize");
                                }
                                else if (item.CategoryID == 9)
                                {
                                    @("Luxury");
                                }
                                else if (item.CategoryID == 10)
                                {
                                    @("Premium");
                                }
                                else if (item.CategoryID == 11)
                                {
                                    @("Minivan");
                                }
                                else if (item.CategoryID == 12)
                                {
                                    @("12 passenger van");
                                }
                                else if (item.CategoryID == 24)
                                {
                                    @("Exotic");
                                }
                                else
                                {
                                    @(Arackiralama.Resources.LanguageFields.VehicleNonCategory)
                                }

                            </span>
                        </div>
                    </div>



