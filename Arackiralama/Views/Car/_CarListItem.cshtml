                                        </div>
                                        <div class="col-12 mt-2">
                                            <div class="row">
                                                <div class="col-4">
                                                    <span>@item.PassengerCount</span>
                                                    <i class="fa fa-user"></i>
                                                </div>
                                                <div class="col-4">
                                                    <span>@item.BaggageCount</span>
                                                    <i class="fas fa-briefcase"></i>
                                                </div>
                                                <div class="col-4">
                                                    <span>@item.DoorCount</span>
                                                    <img src="~/Contents/img/car-door.jpg" />
                                                </div>
                                            </div>
                                        </div>
                                        @foreach (var ChargesItem in item.VehicleCharges.Where(t => t != null))
                                        {
                                            <div class="col-lg-12 mt-2">
                                                <span>
                                                    <i class="far fa-check-circle mr-1"></i><span>@ChargesItem</span>
                                                </span>
                                            </div>
                                        }

