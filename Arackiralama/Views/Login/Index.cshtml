@model Arackiralama.ViewModels.User.UserViewModel
@{
    ViewBag.Title = "Giriş Yap";
    Layout = "~/Views/Shared/_Layout.cshtml";
    if (Session["culture"].ToString() == "tr-TR")
    {
        ViewBag.Culture = "tr";
    }
    else if (Session["culture"].ToString() == "en-GB")
    {
        ViewBag.Culture = "en";
    }
    else if (Session["culture"].ToString() == "ru-RU")
    {
        ViewBag.Culture = "ru";
    }
    else
    {
        ViewBag.Culture = "tr";
    }

}
@if (ViewBag.Hata != null)
{
    <div class="container">
        <div class="row">
            <div class="col-12">
                <div class="alert alert-danger">
                    @ViewBag.Hata
                </div>
            </div>
        </div>
    </div>
}
@if (ViewBag.Kayit != null)
{
    <div class="container">
        <div class="row">
            <div class="col-12">
                <div class="alert alert-success">
                    @ViewBag.Kayit
                </div>
            </div>
        </div>
    </div>
}
@if (ViewBag.NewPassword != null)
{
    <div class="container">
        <div class="row">
            <div class="col-12">
                <div class="alert alert-success">
                    @ViewBag.NewPassword
                </div>
            </div>
        </div>
    </div>
}
@if (ViewBag.Login != null)
{ <div class="container">
        <div class="row">
            <div class="col-12">
                <div class="alert alert-danger">
                    @ViewBag.Login
                </div>
            </div>
        </div>
    </div>
}
<div class="mt-3">
    <div class="row">
        <div class="col-12">
            <center>
                @using (Html.BeginForm("Index", "Login", FormMethod.Post))
                {
                    <div class="row Loginbox">


                        <div class="col-12">
                            <div class="carinfo-steptwo-rightbox-header p-2">
                                <div class="row">
                                    <div class="col-12 mb-3">
                                        <h1 class="info-box-h1">
                                           @Html.Raw(Arackiralama.Resources.LanguageFields.LogInText)
                                        </h1>
                                    </div>
                                    <div class="col-12">
                                        <span class="float-left">
                                            @Html.Raw(Arackiralama.Resources.LanguageFields.EmailInfo)
                                        </span>
                                    </div>
                                    <div class="col-12">
                                        @Html.TextBoxFor(m => m.EPosta, new { @class = "form-control" })
                                    </div>
                                    <div class="col-12 mt-3">
                                        <span class="float-left">
                                            @Html.Raw(Arackiralama.Resources.LanguageFields.PasswordText)
                                        </span>
                                    </div>
                                    <div class="col-12">
                                        @Html.TextBoxFor(m => m.Sifre, new { @class = "form-control", @type = "password" })

                                    </div>
                                   
                                    <div class="col-12 mt-3 mb-3">
                                        <div class="row">
                                            <div class="col-12 col-md-4 mb-1">

                                                <input type="submit" @*data-toggle="modal" data-target="#KVKK"*@ class="btn btn-save" value="@Html.Raw(Arackiralama.Resources.LanguageFields.LogInText)" />
                                                @*@Html.Action("_KVKK", "Content");*@
                                            </div>
                                            <div class="col-12 col-md-4">
                                                <a href="~/Login/Register" class="btn btn-save">@Html.Raw(Arackiralama.Resources.LanguageFields.RegisterText)</a>
                                               
                                            </div>
                                            <div class="col-md-4">
                                                @if (Session["culture"].ToString() == "tr-TR")
                                                {
                                                    @Html.ActionLink("Şifremi Unuttum", "SifreUnuttumEPosta", "Member")
                                                }
                                                else
                                                {
                                                    @Html.ActionLink("Forgot Password", "SifreUnuttumEPosta", "Member")
                                                }
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                    </div>

                }
            </center>
        </div>
    </div>
</div>





