@model Arackiralama.ViewModels.Car.CarViewModel
@{
    ViewBag.Title = "Araç Ekle";
}

<div class="col">
    <div class="row">
        @if (ViewBag.Message != null)
        {
            <div class="col-12 mb-3">
                <div class="alert alert-success">
                    @ViewBag.Message
                </div>
            </div>
        }
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h2 class="card-title">Ara Ekle / Düzenle</h2>
                </div>
            </div>
            @using (Html.BeginForm("Create","Car", FormMethod.Post,new { enctype = "multipart/form-data" }))
            {
                <div class="card-body p-3">
                    <div class="row mb-3">
                        <div class="col-12 col-md-3">
                            <span style="float:right;" class="float-right-absorbe">
                                Şirket İsmi
                            </span>
                        </div>
                        <div class="col-12 col-md-6">
                            <input type="file" />
                        </div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-12 col-md-3">
                            <span style="float:right;" class="float-right-absorbe">
                                Resim
                            </span>
                        </div>
                        <div class="col-12 col-md-6">
                            @if (!String.IsNullOrEmpty(Model.ImageUrl))
                            {
                                <img src="@Model.ImageUrl" class="panel-upload-img" />
                            }
                            @Html.TextBoxFor(m => m.Resim, new { type = "file" })
                            @Html.ValidationMessageFor(m => m.Resim, "", new { style = "color:red;font-size:12px" })
                        </div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-12 col-md-3">
                            <span style="float:right;" class="float-right-absorbe">
                                Araç Markası
                            </span>
                        </div>
                        <div class="col-12 col-md-6">
                            @Html.TextBoxFor(m => m.Marka, new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-12 col-md-3">
                            <span style="float:right;" class="float-right-absorbe">
                                Araç Modeli
                            </span>
                        </div>
                        <div class="col-12 col-md-6">
                            @Html.TextBoxFor(m => m.Model, new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-12 col-md-3">
                            <span style="float:right;" class="float-right-absorbe">
                                Araç Segmnti
                            </span>
                        </div>
                        <div class="col-12 col-md-6">
                            @Html.TextBoxFor(m => m.Segment, new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-12 col-md-3">
                            <span style="float:right;" class="float-right-absorbe">
                                Araç Klassı
                            </span>
                        </div>
                        <div class="col-12 col-md-6">
                            @Html.TextBoxFor(m => m.Sinif , new { @class = "form-control" })
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-12 col-md-3">
                            <span style="float:right;" class="float-right-absorbe">
                                Şansuman
                            </span>
                        </div>
                        <div class="col-12 col-md-6">
                            @Html.TextBoxFor(m => m.Sanzuman , new { @class = "form-control" })
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-12 col-md-3">
                            <span style="float:right;" class="float-right-absorbe">
                                Yakıt Türü
                            </span>
                        </div>
                        <div class="col-12 col-md-6">
                            @Html.TextBoxFor(m => m.YakitTuru , new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-12 col-md-3">
                            <span style="float:right;" class="float-right-absorbe">
                                Kişi Sayısı
                            </span>
                        </div>
                        <div class="col-12 col-md-6">
                            @Html.TextBoxFor(m => m.KisiSayisi , new { @class = "form-control" })
                        </div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-12 col-md-3">
                            <span style="float:right;" class="float-right-absorbe">
                                Bagaj Kapasitesi
                            </span>
                        </div>
                        <div class="col-12 col-md-6">
                            @Html.TextBoxFor(m => m.BagajKapasitesi , new { @class = "form-control" })
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-12 col-md-3">
                            <span style="float:right;" class="float-right-absorbe">
                                Seçilebilecek Extra Mataryeller
                            </span>
                        </div>
                        <div class="col-12 col-md-6">
                            @*<select multiple class="form-control">
                                <option>Kar Lastik Seti</option>
                                <option>Kar Zincir Seti</option>
                                <option>Bebek Koltuğu</option>
                                <option>Çocuk Koltuğu</option>
                                <option>GPS</option>
                                <option>Wİ-Fİ</option>
                            </select>*@
                            @*@Html.DropDownListFor(m => m.CarExtraMaterialID ,
                                new SelectList(Model.ExtraMaterial.Materyal ,
                                               "ID", "Materyal"),"Seçiniz",new { @class = "form-control" })*@
                        </div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-12 col-md-3">
                            <span style="float:right;" class="float-right-absorbe">
                                Aktif mi ?
                            </span>
                        </div>
                        <div class="col-12 col-md-3">
                            @Html.RadioButtonFor(m => m.IsActive,"Aktif")<span>Aktif</span>
                        </div>
                        <div class="col-12 col-md-3">
                            @Html.RadioButtonFor(m => m.IsActive, "Aktif Değil")<span>Aktif Değil</span>
                        </div>
                    </div>

                    <center>
                        <div class="col-12 mb-3">
                            <input type="submit" class="btn btn-success" value="Kaydet" />
                        </div>
                    </center>
                </div>
            }
        </div>
    </div>
</div>


