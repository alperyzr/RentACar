@model Arackiralama.ViewModels.Company.CreateCompanyModel
@{
    ViewBag.Title = "Şirket Ekle";
}

<div class="col">
    <div class="row">
        @if (ViewBag.Message != null)
        {
            <div class="col-12 mb-3">
                <div class="alert alert-success">
                    @ViewBag.Message
                </div>
            </div>
        }
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h2 class="card-title">Şirket Ekle / Düzenle</h2>
                </div>
            </div>
            @using (Html.BeginForm("Create", "Company", FormMethod.Post,new { enctype = "multipart/form-data"}))
            {
                <div class="card-body p-3">

                    <div class="row mb-3">
                        <div class="col-12 col-md-3">
                            <span style="float:right;" class="float-right-absorbe">
                                Resim
                            </span>
                        </div>
                        <div class="col-12 col-md-6">
                            @if (!String.IsNullOrEmpty(Model.ImageUrl))
                            {
                                <img src="@Model.ImageUrl" class="panel-upload-img" />
                            }
                            @Html.TextBoxFor(m => m.Logo, new { type = "file" })
                            @Html.ValidationMessageFor(m => m.Logo, "", new { style = "color:red;font-size:12px" })
                        </div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-12 col-md-3">
                            <span style="float:right;" class="float-right-absorbe">
                                Şirket Adı
                            </span>
                        </div>
                        <div class="col-12 col-md-6">
                            @Html.TextBoxFor(m => m.SirketAdi, new { @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.SirketAdi, "", new { style = "color:red;font-size:12px" })
                        </div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-12 col-md-3">
                            <span style="float:right;" class="float-right-absorbe">
                                Ticari ünvanı
                            </span>
                        </div>
                        <div class="col-12 col-md-6">
                            @Html.TextBoxFor(m => m.TicariUnvani, new { @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.TicariUnvani, "", new { style = "color:red;font-size:12px" })
                        </div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-12 col-md-3">
                            <span style="float:right;" class="float-right-absorbe">
                                Vergi Dairesi
                            </span>
                        </div>
                        <div class="col-12 col-md-6">
                            @Html.TextBoxFor(m => m.VergiDairesi, new { @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.VergiDairesi, "", new { style = "color:red;font-size:12px" })
                        </div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-12 col-md-3">
                            <span style="float:right;" class="float-right-absorbe">
                                Vergi no
                            </span>
                        </div>
                        <div class="col-12 col-md-6">
                            @Html.TextBoxFor(m => m.VergiNo, new { @class = "form-control" })
                            @Html.ValidationMessageFor(m => m.VergiNo, "", new { style = "color:red;font-size:12px" })
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-12 col-md-3">
                            <span style="float:right;" class="float-right-absorbe">
                                Şirket türü
                            </span>
                        </div>
                        <div class="col-12 col-md-3">
                           @Html.RadioButtonFor(m => m.SirketTuru, "Özel")<span>Özel</span>
                        </div>
                        <div class="col-12 col-md-3">
                            @Html.RadioButtonFor(m => m.SirketTuru,"Şahıs")<span>Şahıs</span>
                        </div>
                    </div>
                    <center>
                        <div class="col-12 mb-3">
                            <input type="submit" class="btn btn-success" value="Kaydet" />
                        </div>
                    </center>
                    
                </div>
            }
            </div>
        </div>
    </div>

