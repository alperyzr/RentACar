@model Arackiralama.Models.Company
@{
    ViewBag.Title = "Şirket Detayı";
}

<div class="col">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h2 class="card-title">Şirket Detayı</h2>
                </div>
            </div>
            <div class="card-body p-3">
                <div class="row mb-3">
                    <div class="col-6">
                        <a href="@Url.Action("Edit","Company",new { id = Model.ID })" class="btn btn-info float-right">Düzenle</a>
                    </div>
                    <div class="col-6">
                        <a href="@Url.Action("List","Company",new { id = Model.ID })" class="btn btn-info">Şirket Listesine Dön</a>
                    </div>
                </div>
                <hr />
                <div class="row mb-3">
                    <div class="col-12 col-md-3">
                        <strong style="float:right;" class="float-right-absorbe">
                            Resim
                        </strong>
                    </div>
                    <div class="col-12 col-md-6">
                        <span>
                       
                            <img src="@Model.Logo" class="panel-upload-img"/>
                        </span>
                    </div>
                </div>
                <div class="row mb-3">
                    <div class="col-12 col-md-3">
                        <strong style="float:right;" class="float-right-absorbe">
                            Şirket Adı
                        </strong>
                    </div>
                    <div class="col-12 col-md-6">
                        <span>@Model.SirketAdi</span>
                    </div>
                </div>
                <div class="row mb-3">
                    <div class="col-12 col-md-3">
                        <strong style="float:right;" class="float-right-absorbe">
                            Ticari ünvanı
                        </strong>
                    </div>
                    <div class="col-12 col-md-6">
                        <span>@Model.TicariUnvani</span>
                    </div>
                </div>
                <div class="row mb-3">
                    <div class="col-12 col-md-3">
                        <strong style="float:right;" class="float-right-absorbe">
                           Vergi Dairesi
                        </strong>
                    </div>
                    <div class="col-12 col-md-6">
                        <span>@Model.VergiDairesi</span>
                    </div>
                </div>
                <div class="row mb-3">
                    <div class="col-12 col-md-3">
                        <strong style="float:right;" class="float-right-absorbe">
                           Vergi No
                        </strong>
                    </div>
                    <div class="col-12 col-md-6">
                        <span>@Model.VergiNo</span>
                    </div>
                </div>
                <div class="row mb-3">
                    <div class="col-12 col-md-3">
                        <strong style="float:right;" class="float-right-absorbe">
                            Şirket Tütü
                        </strong>
                    </div>
                    <div class="col-12 col-md-6">
                        <span>@Model.SirketTuru</span>
                    </div>
                </div>
               
            </div>
        </div>
    </div>
</div>

