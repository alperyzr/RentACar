@model Arackiralama.Models.FAQTranslation
@{
    ViewBag.Title = "SSS Ekle / Güncelle";
    
}

<div class="col">
    <div class="row">
        @if (ViewBag.Message != null)
        {
            <div class="col-12 mb-3">
                <div class="alert alert-success">
                    @ViewBag.Message
                </div>
            </div>
        }
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h2 class="card-title">SSS Sayfası Ekle / Düzenle</h2>
                </div>
            </div>
            @using (Html.BeginForm("FAQCreate", "Content", FormMethod.Post))
            {
                @Html.HiddenFor(m=>m.FAQID)
            <div class="card-body p-3">
                <div class="row mb-3">
                    <div class="col-12 col-md-3">
                        <span style="float:right;" class="float-right-absorbe">
                            Dil
                        </span>
                    </div>
                    <div class="col-12 col-md-6">
                        @Html.DropDownListFor(m => m.CultureID,
         Model.cultureList.Select(d => new SelectListItem()
         {
             Value = d.ID.ToString(),
             Text = d.Name
         }),new {@name="CultureID", @class = "form-control" })
                    </div>
                </div>
                <div class="row mb-3">
                    <div class="col-12 col-md-3">
                        <span style="float:right;" class="float-right-absorbe">
                            Soru
                        </span>
                    </div>
                    <div class="col-12 col-md-6">
                        @Html.TextBoxFor(m => m.Question, new { @class = "form-control" })
                    </div>
                </div>
                <div class="row mb-3">
                    <div class="col-12 col-md-3">
                        <span style="float:right;" class="float-right-absorbe">
                            Cevap
                        </span>
                    </div>
                    <div class="col-12 col-md-6">
                        @Html.TextAreaFor(m => m.Answer, new { @class = "form-control" })
                    </div>
                </div>
               
               
                <div class="row mb-3">
                    <div class="col-12 col-md-3">
                        <span style="float:right;" class="float-right-absorbe">
                            Aktif mi ?
                        </span>
                    </div>
                    <div class="col-12 col-md-4">
                        @Html.RadioButtonFor(m => m.IsActiive, "Aktif")<span>Aktif</span>
                    </div>
                    <div class="col-12 col-md-4">
                        @Html.RadioButtonFor(m => m.IsActiive, "Aktif Değil")<span>Aktif Değil</span>
                    </div>
                </div>

                <center>
                    <div class="col-12 mb-3">
                        <input type="submit" class="btn btn-success" value="Kaydet" />
                    </div>
                </center>

            </div>
            }

        </div>
    </div>
</div>

